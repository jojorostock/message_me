<h2 class="ui center aligned medium icon header">
  <i class="circular <%=current_user.color%> users icon"></i>
    Users
</h2>
<table class="ui selectable inverted table">
<thead>
    <tr>
        <th class="center aligned">
            <%= link_to '/users/name', style: "color: white" do %>User<%end%>
        </th> 
        <th class="center aligned">
            <%= link_to '/users/messages', style: "color: white" do %>Message Count<%end%>
        </th>
        <th class="center aligned">
            <%= link_to '/users/friends', style: "color: white" do %>Friends Count<%end%>
        </th>
        <th class="center aligned">
            <%= link_to '/users/is_friends', style: "color: white" do %>Add or Remove Friend<%end%>
        </th>
    </tr>
</thead>
<tbody>
<% @users.each do |u| %>
    <% if u != @user %>
        <tr>
        
            <td data-label="User" class="center aligned" >
                <%= render 'shared/avatar_username', u: u, myClass: "profile-pic"%>
            </td>
            <td data-label="Message Count" class="center aligned">
                <%= u.messages.count%>
            </td>
            <td data-label="Friends Count" class="center aligned">
                <%= u.friendships.count%>
            </td>
            <td data-label="Friend" class="center aligned">
                <%= render 'shared/friendship_button', f: @friendships, u: u %>
            </td>
        </tr>
    <%end%>
<% end %>
</tbody>
</table>