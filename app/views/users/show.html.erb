<h1>Users</h1>
<table class="ui selectable inverted table">
<thead>
    <tr>
        <th class="center aligned">User</th>
        <th class="center aligned">Message Count</th>
        <th class="center aligned">Friends Count</th>
        <th class="center aligned">Add or Remove Friend</th>
    </tr>
</thead>
<tbody>
<% @users.each do |u| %>
    <% if u != @user %>
        <tr>
        
            <td data-label="User" class="center aligned" >
                <% if u.avatar.attached? %>
                    <%= image_tag u.avatar, class: "profile-pic", style:"vertical-align: text-bottom"%>
                <% else %>
                    <%= image_tag ("profile.jpg"), class: "profile-pic", style:"vertical-align: text-bottom"%>
                <%end%>
                <%= link_to '/user/'+u.id.to_s do %>
                    <span style="color: <%= u.color%>">
                        <%= u.username %>
                    </span>
                <%end%>
                
            </td>
            <td data-label="Message Count" class="center aligned">
                <%= u.messages.count%>
            </td>
            <td data-label="Friends Count" class="center aligned">
                <%= u.friendships.count%>
            </td>
            <td data-label="Friend" class="center aligned">
                <%= render 'shared/friendship_button', u: u %>
            </td>
        </tr>
    <%end%>
<% end %>
</tbody>
</table>