<h2 class="ui center aligned medium icon header">
  <i class="circular red comments icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.file_field :images %>
              <%= f.text_field :body %>
              <%= f.button '<i class="bordered inverted red edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <%= link_to "Users", users_path, class:"active item"%>
          <%= link_to "Profile", profile_path, class:"item"%>
          <%= link_to "Users 2", users_path, class:"item"%>
        </div>
      </div>
    </div>
  </div>
</div>
