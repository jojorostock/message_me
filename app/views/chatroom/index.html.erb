<h2 class="ui center aligned medium icon header">
  <i class="circular red comments icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body%>
              <%= f.file_field :photo %>
              <%= f.button '<i class="bordered inverted red edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <%= link_to "Friends", users_path, class:"active item"%>
          <% current_user.friendships.each do |friend| %>
            <%= link_to User.where(id: friend.friend_id).first.username, '/user/'+friend.friend_id.to_s, class:"item"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
