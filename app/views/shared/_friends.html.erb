<h2>Friends</h2>
<table class="ui selectable inverted table">
<thead>
    <tr>
        <th class="four wide">Friends Since</th>
        <th class="twelve wide">Friend Name</th>
    </tr>
</thead>
<tbody>
<% @friendships.each do |friend| %>
    <tr>
      <td data-label="Time" class=""><%= friend.created_at.to_formatted_s(:long_ordinal)%></td>
      <td data-label="Body" style="color: <%= User.where(id: friend.friend_id).first.color %>">
        <% if User.where(id: friend.friend_id).first.avatar.attached? %>
            <%= image_tag User.where(id: friend.friend_id).first.avatar, class: "profile-pic", style:"vertical-align: text-bottom"%>
        <% else %>
            <%= image_tag ("profile.jpg"), class: "profile-pic", style:"vertical-align: text-bottom"%>
        <%end%>
        <%= User.where(id: friend.friend_id).first.username%>
      </td>
    </tr>
<% end %>
</tbody>
</table>