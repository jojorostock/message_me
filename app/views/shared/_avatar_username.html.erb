<% if u.avatar.attached? %>
    <%= image_tag u.avatar, class: myClass, style:"vertical-align: text-bottom"%>
<% else %>
    <%= image_tag ("profile.jpg"), class: myClass, style:"vertical-align: text-bottom"%>
<%end%>
<%= link_to '/user/'+u.id.to_s do %>
    <span style="color: <%= u.color%>">
        <%= u.username %>
    </span>
<%end%>