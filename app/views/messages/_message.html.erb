
<div class="event">
  <div class="content">
    <div class="chat-message summary <%= current_user == message.user ? 'current-user-message' : '' %>">
      <div class="ui two column grid">
        <div class="three wide column">
          <% if message.user.avatar.attached? %>
            <%= image_tag message.user.avatar, class: "message-pic"%>
          <% else %>
            <%= image_tag ("profile.jpg"), class: "message-pic"%>
          <%end%>
        </div>
        <div class="ten wide column">
          <div class="ui one column grid" style="padding-left: 0">
            <div class="column" style="padding-bottom:0">
              <%= link_to current_user == message.user ? profile_path : 'user/'+message.user.id.to_s do %>
                <em style="color: <%= message.user.color %>">
                  @<%= message.user.username %>
                </em>
              <% end %>
              <%= message.created_at.in_time_zone('Eastern Time (US & Canada)').to_formatted_s(:short)%>
            </div>
            <div class="column" style="padding-top:5px">
              <div class="row"> 
                <%= message.body %>
              </div>
              <% if message.photo.attached? %>
                <br />
                <div class="row"> 
                  <%= image_tag message.photo, class: "message-body-pic"%>
                </div>
              <% end %>
            </div>
          </div>
              
        </div>
        <div class="three wide column">
        
          <div class="ui fluid image" style="text-align: center">
            <div class="ui label">
              <% if message.likes.where(user_id: current_user.id).count > 0%>
                <%= link_to message_like_path(message.id, current_user), method: :delete do %>
                  <div class="ui icon mini button" data-tooltip="<%= message.likes.map { |l| User.where(id: l.user.id).first.username}.join(', ') %>" data-position="top right" data-inverted="">
                    <i class="red heart icon"></i>
                  </div>
                <% end %>
              <% else %>
                <%= link_to message_likes_path(message.id), method: :post do %>
                  <div class="ui icon mini button" data-tooltip="<%= message.likes.count > 0 ? message.likes.map { |l| User.where(id: l.user.id).first.username}.join(', ') : "No Likes" %>" data-position="top right" data-inverted="">
                    <i class="red heart outline icon"></i>
                  </div>
                <% end %>
              <% end %>
              <div class="detail", style= "display: contents;">
                <%= message.likes.count%>
              </div>
            </div>
            
            
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>